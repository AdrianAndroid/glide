<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

  <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <Button
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:onClick="secondClick"
      android:text="Second Activity" />

    <Button
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:onClick="displayWorld"
      android:text="displayWorld" />
    <Button
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:onClick="displayWorldGlide"
      android:text="displayWorldGlide" />


    <Button
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:onClick="dispalyOne"
      android:text="displayOne"
      tools:ignore="OnClick" />


    <Button
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:onClick="displyTwo"
      android:text="displayTwo"
      tools:ignore="OnClick" />


    <Button
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:onClick="displyError"
      android:text="displayError"
      tools:ignore="OnClick" />

    <Button
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:onClick="displyPreload"
      android:text="displyPreload"
      tools:ignore="OnClick" />


    <ImageView
      android:id="@+id/image1"
      android:layout_width="match_parent"
      android:layout_height="200dp"
      android:src="@mipmap/ic_launcher" />


    <ImageView
      android:id="@+id/image2"
      android:layout_width="match_parent"
      android:layout_height="200dp"
      android:src="@mipmap/ic_launcher" />


    <ImageView
      android:id="@+id/image3"
      android:layout_width="match_parent"
      android:layout_height="200dp"
      android:src="@mipmap/ic_launcher" />


    <ImageView
      android:id="@+id/image4"
      android:layout_width="match_parent"
      android:layout_height="200dp"
      android:src="@mipmap/ic_launcher" />


    <ImageView
      android:id="@+id/image5"
      android:layout_width="match_parent"
      android:layout_height="200dp"
      android:src="@mipmap/ic_launcher" />
  </LinearLayout>
</ScrollView>